<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Date of birth</th>
      <th>Credit card</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.address %></td>
        <td><%= contact.format_birth_date %></td>
        <td><%= "#{contact.card_franchise} #{"*"*8}#{contact.card_last_four_digits}" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Export CSV', contacts_path(format: :csv) %>
<%= form_with model: @contact_file do |f| %>
  <%= f.file_field :file %>
  <%= f.submit "Upload" %>
<% end %>